#include "holberton.h"
#include <stdlib.h>
#include <stdio.h>
/**
 *signed_int - prints a signed integer to stdout
 *@va_args:
 *@arglist:
 *Return: writes the integer to stdout
 */
int signed_int(va_args, arglist)
{
	int d;
	char *b;

	d = va_arg(arglist, int);

	itoa(d, b, 10);

	if (d < 0)
	{
		d = -d;
		write(1, d, 4);
	}
	else
		write(1, d, 4);
}
